<h1 style="color:white; font-size:1000%">Footr</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Nation</th>
      <th>Skills</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody style="background:pink">
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.nation %></td>
        <td><%= player.skills %></td>
